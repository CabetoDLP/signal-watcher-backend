{
  "name": "signal-watcher-backend",
  "version": "1.0.0",
  "description": "This project was bootstrapped with Fastify-CLI.",
  "main": "app.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "prisma:generate": "npx prisma generate",
    "build:ts": "npm run prisma:generate && tsc",
    "watch:ts": "tsc -w",
    "test": "npm run build:ts && tsc -p test/tsconfig.json && c8 node --test -r ts-node/register \"test/**/*.ts\"",
    "start": "npm run build:ts && fastify start -l info dist/app.js",
    "dev:start": "fastify start --ignore-watch=.ts$ -w -l info -P dist/app.js",
    "dev": "npm run prisma:generate && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"npm:watch:ts\" \"npm:dev:start\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/autoload": "^6.3.1",
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/redis": "^7.0.2",
    "@fastify/sensible": "^6.0.3",
    "@google/generative-ai": "^0.24.1",
    "@prisma/client": "^6.14.0",
    "dotenv": "^16.3.1",
    "fastify": "^5.0.0",
    "fastify-type-provider-zod": "^5.0.3",
    "openai": "^4.33.0",
    "pino": "^8.15.1",
    "pino-pretty": "^10.2.3",
    "prisma": "^6.14.0",
    "redis": "^5.8.1",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@types/node": "^22.1.0",
    "c8": "^10.1.2",
    "concurrently": "^9.0.0",
    "fastify-tsconfig": "^3.0.0",
    "ts-node": "^10.4.0",
    "typescript": "~5.8.2"
  }
}
